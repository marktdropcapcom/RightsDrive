@section Scripts {

    <script src="~/Content/koparion/js/main.js"></script>
    <script src="~/Scripts/pagination.min.js"></script>

    <script>

        var CatName ="@ViewData["CatName"]";
        var TitleArr = [];

        $(document).ready(function () {
            $("#BookNav").addClass("active");
            //console.log(CatName);
            $("#TitleHTMLContainer").html("<img src='/Content/images/loading-spinner-grey.gif' style='width:100px; margin-left:auto;margin-right:auto;' />");
            
            getCatName();
            getCatTitlesHTML();
        });

        function getCatTitlesHTML() {

            var deferred = $.Deferred();

            var data = {
                client_id: client_id_val
            };
            

            var args = {
                ajaxUrl: DCWebServiceURL + "/api/rh/dashboard/category?DashboardUserID=0&EventID=0&OnlyFavorites=0&CategoryName="+CatName,
                headers: bearerHeader,
                htmlMethod: "GET",
                contentType: "application/x-www-form-urlencoded; charset=UTF-8",
                pushData: data //JSON.stringify(data)
            };
            var rowHTML = "";

            var ajaxPromise = DKAjax(args)
                .done(function (data) {

                    var len = data.length;

                    if (len == 0) {
                        rowHTML = "<div style='width:200px; margin:50px;'>No Titles Available at this time.</div>";
                        $("#TitleHTMLContainer").html(rowHTML);
                    }
                    else {
                        for (var i = 0; i < len; i++) {
                            //-- get special html --
                            var SpecialHtml = "";
                            var img = "";


                            if (data[i].mostRecentCoverUrl != "")
                                img = "<img src='" + data[i].mostRecentCoverUrl + "' style='' />";

                            var rowHTML = 
                                '<div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">' +
                                    '<div class="product-wrapper mb-40 hidden-md hidden-sm" style="display:block;">' +
                                    '<div class="product-img" style="">' +
                                        '<a href="/book/' + data[i].slug +'">' + img + '</a>' +
                                        '<div class="quick-view">' +
                                            '<a class="action-view" href="/book/' + data[i].slug +'" title="Quick View"><i class="fa fa-search-plus"></i></a>' +
                                        '</div>' +
                                    '<div class="product-details text-center">' +
                                    '<h4><a href="/book/'+data[i].slug+'">' + data[i].name + '</a></h4>' +
                                    '</div>' +
                                    '</div>' +
                                    '</div>' +
                                '</div>';

                            TitleArr.push(rowHTML);

                            //rowHTML = rowHTML+'<div class="product-link">'+                            '<div class="product-button">' +
                            //  '<a href="#" title="Add to cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>' +           '</div>' +
                            // '<div class="add-to-link">' +               '<ul><li><a href="product-details.html" title="Details"><i class="fa fa-external-link"></i></a></li></ul>' +                                    '</div>'+                            '</div>' +                            '</div>' +                            '</div>';


                        }

                        $('#PagingContainer').pagination({
                            dataSource: TitleArr,
                            pageSize: 25,
                            className: 'paginationjs-theme-blue paginationjs-big',
                            callback: function (response, pagination) {
                                //console.log(22, response, pagination);
                                var dataHtml = "";
                                $.each(response, function (index, item) {
                                    dataHtml += item;
                                });
                                $("#TitleHTMLContainer").html(dataHtml);
                            }
                        });
                    }
                    //$("#TitleHTMLContainer").html(rowHTML);

                   



                    deferred.resolve();
                })
                .fail(function (xhr, status, request) {
                    //toastr.error("Error Loading", "Error");


                    deferred.resolve();
                });
        }
        function getCatName() {

            var deferred = $.Deferred();

            var data = {
                client_id: client_id_val
            };


            var args = {
                ajaxUrl: DCWebServiceURL + "/api/rh/category/namecheck?CategoryName=" + CatName,
                headers: bearerHeader,
                htmlMethod: "GET",
                contentType: "application/x-www-form-urlencoded; charset=UTF-8",
                pushData: data //JSON.stringify(data)
            };
            var rowHTML = "";

            var ajaxPromise = DKAjax(args)
                .done(function (data) {
                    $('title').text("Rights Drive | "+data);
                    $("#CatNameContainer").html(data);

                    deferred.resolve();
                })
                .fail(function (xhr, status, request) {
                    toastr.error("Error Loading", "Error");
                    deferred.resolve();
                });
        }


    </script>
}