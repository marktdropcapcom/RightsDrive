@section Scripts {
    @Scripts.Render("~/bundles/RHproduct")
    <script src="/content/koparion/js/jquery.flexslider.js"></script>

    <script>

        var BookSlug ="@ViewData["Slug"]";
        var ProductID = 0;

        $(document).ready(function () {
            $("#BookNav").addClass("active");
            getBookHTML();
            $("#BookExtras").tabs();


            $("#ContactRightsLink").click(function () {
                $('#modalContactSlideUp').modal('show');
            });
            $("#ContactManuLink").click(function () {
                $('#modalContactSlideUp').modal('show');
            });
            $("#CloseButton").click(function () {
                $('#modalContactSlideUp').modal('hide');
            });
            $("#SendReqButton").click(function () {
                sendInterstEmail();
            });
        });


        function sendInterstEmail() {

            var deferred = $.Deferred();

            if ($("#ReqTitle").val() == "") {
                toastr.error(" Must Include Title Name.", "Error");
                return false;
            }
            if ($("#FullName").val() == "") {
                toastr.error(" Must Include an Name.", "Error");
                return false;
            }
            if ($("#Interest").val() == "") {
                toastr.error(" Must Include Interest.", "Error");
                return false;
            }
            if ($("#Email").val() == "") {
                toastr.error(" Must Include an Email.", "Error");
                return false;
            }

            var data = {
                client_id: client_id_val,
                Email: $("#Email").val(),
                FullName: $("#FullName").val(),
                Interest: $("#Interest").val(),
                ReqTitle: $("#ReqTitle").val()
            };

            var args = {
                ajaxUrl: DCWebServiceURL + "/api/rh/interestform",
                headers: bearerHeader,
                htmlMethod: "POST",
                contentType: "application/x-www-form-urlencoded; charset=UTF-8",
                pushData: data //JSON.stringify(data)
            };
            var rowHTML = "";

            var ajaxPromise = DKAjax(args)
                .done(function (data) {
                    toastr.success("Your Request has been sent. Thank you, we will be in touch.", "Success");
                    deferred.resolve();
                })
                .fail(function (xhr, status, request) {
                    toastr.error("Error Loading", "Error");
                    deferred.resolve();
                });
        }


    </script>
}