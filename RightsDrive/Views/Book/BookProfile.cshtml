<!-- modalContactSlideUp Model Slideup -->
<div id="modalContactSlideUp" class="modal fade slide-up disable-scroll" style="z-index:1100;">
    <div class="modal-dialog" style="min-width:700px;">
        <div class="modal-content-wrapper" style="">
            <div class="modal-content">
                <div class="modal-header clearfix text-left">
                    <h4 id="" style=" font-weight:bold;">Inquire About Great Titles</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">x</span></button>                    
                </div>
                <div class="modal-body" style="margin-top:10px;">
                    <div class="row">
                        <div class="col-4">
                            <div id="CoverImg"></div>
                        </div>
                        <div class="col-8">
                            <form role="form" id="EditionDescForm" class="">
                                <div class="form-body">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="form-group form-group-default">
                                                <label>Title</label>
                                                <div class="controls">
                                                    <input type="text" id="ReqTitle" placeholder="Title Name" class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="form-group form-group-default">
                                                <label>Name</label>
                                                <div class="controls">
                                                    <input type="text" id="FullName" placeholder="Your Name" class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="form-group form-group-default">
                                                <label>Email</label>
                                                <div class="controls">
                                                    <input type="text" id="Email" placeholder="Your Email" class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="form-group form-group-default">
                                                <label>I'm Interested</label>
                                                <div class="controls">
                                                    <select id="Interest" class="form-control">
                                                        <option value="PurchasingRights">Purchasing Rights</option>
                                                        <option value="Manuscript">Reviewing Manuscript</option>
                                                        <option value="PurchasingRightsAndManuscript">Purchasing Rights &amp; Manuscript</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row" style="margin-top:15px;">
                                        <div class="col-lg-12 " style=" padding-right:12px; text-align:right;">
                                            <button id="SendReqButton" type="button" class="btn btn-primary btn-cons m-t-10" style="width:150px;">Send Request</button> <button id="CloseButton" type="button" class="btn btn-complete btn-cons m-t-10" style="width:150px;">Close</button>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>
